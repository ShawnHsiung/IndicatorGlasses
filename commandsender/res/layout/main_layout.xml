<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="20dp"
                  android:layout_gravity="center_horizontal">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LinphoneBtn"
                android:tag="Connect"
                android:text="Connect"/>
        <Button android:id="@+id/OnlineStatueBtn"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="15dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="30dp"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:orientation="horizontal"
                      android:gravity="center">
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/command_forward_btn"
                    android:layout_gravity="center_horizontal"
                    android:tag="forward"
                    android:text="Forward"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal">
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/command_left_btn"
                    android:tag="left"
                    android:text="Left"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/command_stop_btn"
                    android:tag="stop"
                    android:text="Stop"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/command_right_btn"
                    android:tag="right"
                    android:text="Right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="40dp"
                  android:orientation="vertical">
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hello..."
                android:id="@+id/LinphoneTextView"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="fill_horizontal">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tag="send"
                    android:text="Send"
                    android:id="@+id/dialog_confirm"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>